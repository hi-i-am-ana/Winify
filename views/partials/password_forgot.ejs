<div class="modal password-forgot-modal">
  <i class="far fa-times-circle close-modal-button"></i>
  <div class="password-forgot-container">
    <div class="">
      <h2>Reset Password</h2>
    </div>

    <form id="password-forgot-form" method="" action="" novalidate>
      <div class="form-input">
        <label for="password-forgot-email" class="form-label">Email Address *</label>
        <input type="email" class="form-control" id="password-forgot-email" name="email">
        <div class="form-alert" id="password-forgot-email-empty-alert">Please enter your email address</div>
        <div class="form-alert" id="password-forgot-email-invalid-alert">Email address has invalid format</div>
        <div class="form-alert" id="password-forgot-email-missing-alert">User with this email address does not exist</div>
        <div class="form-alert" id="password-forgot-email-unconfirmed-alert">Please confirm your email address</div>
      </div>
      
      <button class="form-button" type="submit">Send reset link</button>
    </form>

    <p class="modal-text">or <a class="login-link">Login</a></p>
  </div>
</div>

<div class="modal password-forgot-popup">
  <i class="far fa-times-circle close-modal-button"></i>
  <div class="">
    <div class="">
      <h2>Reset Password</h2>
    </div>
    <div class="">
      <p class="modal-text">An email has been sent to</p>
      <p class="modal-text password-forgot-email"></p>
      <p class="modal-text">with further instructions</p>
    </div>
  </div>
</div>